{
  "name": "Avim",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Avim for firefox",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "__MSG_extAction__"
//    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/avim.js",
        "scripts/extension.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "default_locale": "en",
  //  "offline_enabled": true,
  "background": {
    "scripts": [
      "chrome/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "storage"
  ]
}
